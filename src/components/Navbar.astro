---
import NavListItem from "./NavListItem.astro";
import NavListResponsive from "./NavListResponsive.astro";

// Icons
import SearchIcon from "@/icons/Search.astro";
import CartIcon from "@/icons/Cart.astro";
import UserIcon from "@/icons/User.astro";
import HamburgerIcon from "@/icons/Hamburger.astro";
---

<header class="bg-white h-20 w-full fixed z-40">
  <nav class="px-6 md:px-10 w-full h-full flex items-center justify-between">
    <a href="#">
      <img src="/images/Logo.png" class="h-10 md:h-8 lg:h-10 w-auto" alt="" />
    </a>

    <ul class="hidden md:flex space-x-4 text-xs uppercase">
      <NavListItem href="#">Inicio</NavListItem>
      <NavListItem href="#">Nosotros</NavListItem>
      <NavListItem href="#">Cátalogo</NavListItem>
      <NavListItem href="#">Más vendidos</NavListItem>
      <NavListItem href="#">Sugerencias</NavListItem>
      <NavListItem href="#">Síguenos</NavListItem>
    </ul>

    <ul class="hidden md:flex md:space-x-2 lg:space-x-4">
      <NavListItem href="#">
        <SearchIcon />
      </NavListItem>
      <NavListItem href="#">
        <CartIcon />
      </NavListItem>
      <NavListItem href="#">
        <UserIcon />
      </NavListItem>
    </ul>

    <!-- Botón hamburguesa (visible en pantallas pequeñas) -->
    <ul class="flex space-x-4 md:hidden">
        <NavListItem href="#">
            <SearchIcon />
          </NavListItem>
          <NavListItem href="#">
            <CartIcon />
          </NavListItem>
          <NavListItem href="#">
            <UserIcon />
          </NavListItem>

      <button id="menu-toggle" type="button">
        <HamburgerIcon />
      </button>
    </ul>
  </nav>

  <!-- Menú responsive (inicialmente oculto) -->
  <div id="responsive-menu" class="hidden md:hidden">
    <div
      class="flex flex-col items-center justify-center w-full h-[calc(100vh-78.4px)] bg-white border-t-2 text-xl uppercase"
    >
      <NavListResponsive href="#">Inicio</NavListResponsive>
      <NavListResponsive href="#">Nosotros</NavListResponsive>
      <NavListResponsive href="#">Cátalogo</NavListResponsive>
      <NavListResponsive href="#">Más vendidos</NavListResponsive>
      <NavListResponsive href="#">Sugerencias</NavListResponsive>
      <NavListResponsive href="#">Síguenos</NavListResponsive>
    </div>
  </div>
</header>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const responsiveMenu = document.getElementById("responsive-menu");

  menuToggle.addEventListener("click", () => {
    responsiveMenu.classList.toggle("hidden");
  });
</script>
